<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add a new comment to <%=campground.name%>!</h1>
    <div style="width:30%; margin: 35px auto;">
      <form method="POST" action="/campgrounds/<%=campground._id%>/comments">
        <!-- <div class="form-group">
          <input class="form-control" name="comment[author]" type="text" placeholder="Comment author"/>
        </div> -->
        <div class="form-group">
          <input class="form-control" name="comment[text]" type="text" placeholder="Comment text"/>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Add</button>
        </div>
      </form>
      <a href="/campgrounds/<%=campground._id%>">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
