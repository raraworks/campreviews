<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add a new campground!</h1>
    <div style="width:30%; margin: 35px auto;">
      <form method="POST" action="/campgrounds">
        <div class="form-group">
          <input class="form-control" name="name" type="text" placeholder="Name"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="image" type="text" placeholder="Image"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="description" type="text" placeholder="description"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="price" type="number" step="0.01" min="0.00" placeholder="Price"/>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Add</button>
        </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
