<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div style="width:30%; margin: 35px auto;">
      <form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT">
        <div class="form-group">
          <input class="form-control" name="campground[name]" type="text" placeholder="Name" value="<%= campground.name %>"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="campground[image]" type="text" placeholder="Image" value="<%= campground.image %>"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="campground[description]" type="text" placeholder="Description" value="<%= campground.description %>"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="campground[price]" type="number" step="0.01" min="0.00" placeholder="Price"/ value="<%= campground.price %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Edit</button>
        </div>
      </form>
      <a href="/campgrounds/<%=campground._id%>">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
